{
  "$schema": "http://json-schema.org/schema#",
  "$id": "handler_schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "appcode",
    "depcfg",
    "version",
    "appname",
    "settings"
  ],
  "properties": {
    "appcode": {
      "type": "string",
      "description": "handler code",
      "minLength": 1
    },
    "depcfg": {
      "$ref": "depcfg_schema.json"
    },
    "version": {
      "type": "string",
      "description": "authoring tool. use 'external' if authored or edited outside eventing ui",
      "pattern": "^evt-[5-7].[0-9]+.[0-9]+-[0-9]{4}-(ee|ce)$"
    },
    "enforce_schema" : {
      "type": "boolean",
      "description": "enforces stricter validation for all settings and configuration fields.",
      "default": false
    },
    "handleruuid": {
      "type": "integer",
      "description": "unique id of the the handler. generated by server",
      "minimum": 0,
      "default": 0
    },
    "function_instance_id": {
      "type": "string",
      "description": "unique id of the deployment of the handler. generated by server",
      "minLength": 0,
      "default": ""
    },
    "appname": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^[a-zA-Z0-9][a-zA-Z0-9_-]*$"
    },
    "settings": {
      "$ref": "settings_schema.json"
    }
  }
}
